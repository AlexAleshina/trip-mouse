{{> header}}
<!-- Home -->

<div class="home">

    <!-- Home Slider -->
    <div class="home_slider_container">
        <div class="owl-carousel owl-theme home_slider">

            <!-- Slide -->
            <div class="owl-item">
                <div class="background_image" style="background-image:url(images/home_slider.jpg)"></div>
                <div class="home_slider_content_container">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <div class="home_slider_content">
                                    <div class="home_title">
                                        <h2>TripMouse</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Search -->
<!--if surprise on => you can put fromPlace, min and max days, 
if surprise off => you can put  departure, arrival and depart day 
do it from DOM-->
<div class="home_search">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="home_search_container">
                    <div class="home_search_title">Search for your trip</div>
                    <div class="home_search_content">
                        <form method="GET" class="home_search_form" id="home_search_form">
                            <div
                                class="d-flex flex-lg-row flex-column align-items-start justify-content-lg-between justify-content-start">
                                <input type="date" class="search_input search_input_1" name="dateFrom"
                                    placeholder="from" id="dateFrom" value="{{dateFrom}}">
                                <input type="text" class="search_input search_input_2" required name="fromPlace"
                                    placeholder="Origin" id="fromPlace" value="{{fromPlace}}">
                                <input type="text" class="search_input search_input_3" name="toPlace"
                                    placeholder="Destination" id="toPlace" value="{{toPlace}}">
                                <input type="number" class="search_input search_input_4" name="minDays"
                                    placeholder="Minimum days" id="minDays" value="{{minDays}}">
                                <input type="number" class="search_input search_input_4" name="maxDays"
                                    placeholder="Maximum Days" id="maxDays" value="{{maxDays}}">
                                <label class="surprise">Surprise Destination<input type="checkbox" name="surprise"
                                        id="surprise">
                                </label>
                                <div class="surprise">Currency</div>
                                <select id="cur" name="currency" style=margin:2vw>
                                    <option value="EUR">Euro</option>
                                    <option value="USD">US Dollar $</option>
                                    <option value="RUB">Russian Rubbles</option>
                                    <option value="AUD">Australian dollar</option>
                                    <input id="submitSearch" type="submit" name="submit" value="search">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>